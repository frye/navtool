{
  "servers": {
    "Perplexity": {
      "command": "npx",
      "args": ["-y", "server-perplexity-ask"],
      "envFile": "${workspaceFolder}/.env.local"
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },
    "playwright": {
      "command": "npx",
